#================= Montitors ================

mode "Monitor arrangement: [1] DVI, [2] HDMI, [3] Both" {
  bindsym 1 exec "xrandr --output HDMI-A-0 --off --output DVI-D-0 --mode 1920x1080 --rate 60"; mode "default"
  bindsym 2 exec "xrandr --output DVI-D-0 --off --output HDMI-A-0 --mode 1920x1080 --rate 60"; mode "default"
  bindsym 3 exec "xrandr --output HDMI-A-0 --mode 1920x1080 --rate 60 --left-of DVI-D-0"; mode "default"
  bindsym Escape mode "default"
}

# monitor arrangement selection
bindsym $mod+p mode "Monitor arrangement: [1] DVI, [2] HDMI, [3] Both"
